      "NextPhraseIndex": 2,
      "Index": 1,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "What are you talking about?",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,

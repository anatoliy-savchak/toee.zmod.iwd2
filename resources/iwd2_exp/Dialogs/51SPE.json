      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 3,
      "Index": 4,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "Wait - yes, I'm... sorry.  Please allow me to beg forgiveness.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31512
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 3,
      "Index": 5,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "I'll take my leave, now.  Farewell.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31513
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 3,
      "Index": 6,
      "Flags": "HasText"
    },
    {

    },
    {
      "Text": {
        "Text": "You perished here, very long ago.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31517
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 5,
      "Index": 8,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "You've become a spectre, an undead creature of evil.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31518
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 5,
      "Index": 9,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "I don't know.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31519
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 5,
      "Index": 10,
      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "The... duergar outside did it.  You could avenge yourself with their blood.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31521
      },
      "JournalIndex": 0,
      "TriggerIndex": 0,
      "ActionIndex": -1,
      "NextScriptDialog": "51SPE",
      "NextPhraseIndex": 6,
      "Index": 11,
      "Flags": "HasText, HasTrigger"
    },
    {
      "Text": {
        "Text": "Perhaps you died in such anguish that your spirit couldn't rest.",

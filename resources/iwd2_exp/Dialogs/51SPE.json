      "Flags": "HasText"
    },
    {
      "Text": {
        "Text": "I'm not who you think... just leave me be.",
        "Flags": "Standard",
        "Sound": "",
        "VolumeVariance": 0,
        "PitchVariance": 0,
        "Strref": 31511
      },
      "JournalIndex": 0,
      "TriggerIndex": -1,

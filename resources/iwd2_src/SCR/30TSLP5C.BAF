IF
	Global("TEAM_2","MYAREA",0)
	Or(2)
		AttackedBy([GOODCUTOFF],DEFAULT)
		PickLockFailed([GOODCUTOFF])
	!Dead(Myself)
THEN
	RESPONSE #100
		SetGlobal("TEAM_2","MYAREA",1)
		Continue()
END

IF
	!Allegiance(Myself,ENEMY)
	!Global("TEAM_2","MYAREA",0)
THEN
	RESPONSE #100
		Enemy()
		Continue()
END

IF
	Or(2)
		Global("TEAM_2","MYAREA",0)
		Global("SLEEP_TEAM_5_AWAKE","MYAREA",0)
	!Sequence(Myself,SLEEP)
	See(NearestEnemyOf(Myself),0)
	!Dead(Myself)
THEN
	RESPONSE #100
		SetGlobal("SLEEP_TEAM_5_AWAKE","MYAREA",1)
		SetGlobal("TEAM_2","MYAREA",1)
		Continue()
END

IF
	Global("SLEEP_TEAM_5_AWAKE","MYAREA",0)
	AttackedBy([ENEMY],DEFAULT)
	!Dead(Myself)
THEN
	RESPONSE #100
		SetGlobal("SLEEP_TEAM_5_AWAKE","MYAREA",1)
		Continue()
END

IF
	Global("SLEEP_TEAM_5_AWAKE","MYAREA",0)
	Sequence(Myself,SLEEP)
	Or(2)
		Heard([ANYONE],66)
		Heard([ANYONE],77)
	See(LastHeardBy(Myself),0)
	!Sequence(LastHeardBy(Myself),SLEEP)
	!Dead(Myself)
THEN
	RESPONSE #100
		SetGlobal("SLEEP_TEAM_5_AWAKE","MYAREA",1)
		Continue()
END

IF
	Global("SLEEP_TEAM_5_AWAKE","MYAREA",0)
	!Global("TEAM_2","MYAREA",0)
THEN
	RESPONSE #100
		SetGlobal("SLEEP_TEAM_5_AWAKE","MYAREA",1)
		Continue()
END


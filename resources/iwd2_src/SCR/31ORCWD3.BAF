IF
	HaveSpell(WIZARD_DISPEL_MAGIC)  // SPWI302.SPL (Dispel Magic)
	See([PC],0)
	IsSpellTargetValid(LastMarkedObject,WIZARD_DISPEL_MAGIC,0)  // SPWI302.SPL (Dispel Magic)
THEN
	RESPONSE #100
		Spell(LastMarkedObject,WIZARD_DISPEL_MAGIC)  // SPWI302.SPL (Dispel Magic)
		WaitAnimation(Myself,WALK)
		WaitAnimation(Myself,CONJURE)
		WaitAnimation(Myself,CAST)
END


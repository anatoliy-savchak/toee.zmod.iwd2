IF
	ForceMarkedSpell(MARKED_SPELL)
	SetSpellTarget(Nothing)
	HPPercentLT(Myself,33)
THEN
	RESPONSE #100
		MarkSpellAndObject("140112141103",Myself,SPELLCAST_IGNORE_SEE)  // [CLERIC_CURE_SERIOUS_WOUNDS, CLERIC_CURE_MODERATE_WOUNDS, CLERIC_CURE_LIGHT_WOUNDS]
		Continue()
END


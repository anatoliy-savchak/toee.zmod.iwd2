IF
	True()
THEN
	RESPONSE #100
		CutSceneId("04_50HNT_01")
		SpellHitEffectSprite("07_50Isair_01",Myself,SLAY_LIVING,20)
		PlaySequence(Myself,DIE)
		Wait(1)
		SpellHitEffectSprite(Myself,Myself,RAISE_DEAD,20)
		Wait(1)
		Kill(Myself)
		CreateCreature("50Zom","ZOMBIE_1",[-1.-1],0)  // Possessed Corpse
		ActionOverride(LastMarkedObject,FaceObject(NearestEnemyOf(Myself)))
		DestroySelf()
END


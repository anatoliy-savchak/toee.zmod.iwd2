IF
	OnCreation()
	!Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
	!Sequence("5202P03",AWAKE)
THEN
	RESPONSE #100
		PlaySequence("5202P03",AWAKE)
END

IF
	OnCreation()
	Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
	!Sequence("5202P03",ATTACK)
THEN
	RESPONSE #100
		PlaySequence("5202P03",ATTACK)
END

IF
	!Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
	!Sequence("5202P03",AWAKE)
THEN
	RESPONSE #100
		PlaySequence("5202P03",AWAKE)
		PlaySound("am5202i")
		Continue()
END

IF
	Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
	!Sequence("5202P03",ATTACK)
THEN
	RESPONSE #100
		PlaySequence("5202P03",ATTACK)
		PlaySound("am5202j")
		Continue()
END

IF
	Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
	InTrap([PC])
THEN
	RESPONSE #100
		ReallyForceSpell([PC],INNATE_PROTECTION_FROM_ELECTRICITY)  // SPIN230.SPL (Protection from Electricity)
		PlaySequence("5202P03",AWAKE)
		SetGlobal("CHAMBER_3_SWITCH_ACTIVE","MYAREA",0)
END

IF
	!Global("CHAMBER_3_SWITCH_ACTIVE","MYAREA",3)
THEN
	RESPONSE #100
		NoAction()
END


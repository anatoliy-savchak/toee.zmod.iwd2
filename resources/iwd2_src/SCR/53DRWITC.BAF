IF
	ForceMarkedSpell(MARKED_SPELL)
	SetSpellTarget(Nothing)
	See(NearestEnemyOf(Myself),0)
THEN
	RESPONSE #100
		MarkSpellAndObject("21122112211221122222242223082308",LastMarkedObject,SPELLCAST_IGNORE_SEE | SPELLCAST_IGNORE_VALID_SPELL_TARGET | SPELLCAST_RANDOM)  // [WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_BLINDNESS, WIZARD_MORDENKAINENS_FORCE_MISSILES, WIZARD_LIGHTNING_BOLT, WIZARD_LIGHTNING_BOLT]
		MarkSpellAndObject("2224",[PC.0.0.0.0.0.0.0.0.238],SPELLCAST_RANDOM)  // [WIZARD_DEAFNESS]
		MarkSpellAndObject("3242",[PC.0.0.0.0.0.0.0.0.CLASSMASK_GROUP_WARRIORS],SPELLCAST_RANDOM)  // [INNATE_FAERIE_FIRE]
		Continue()
	RESPONSE #100
		MarkSpellAndObject("2224",[PC.0.0.0.0.0.0.0.0.238],SPELLCAST_RANDOM)  // [WIZARD_DEAFNESS]
		MarkSpellAndObject("3242",[PC.0.0.0.0.0.0.0.0.CLASSMASK_GROUP_WARRIORS],SPELLCAST_RANDOM)  // [INNATE_FAERIE_FIRE]
		MarkSpellAndObject("21122112211221122222242223082308",LastMarkedObject,SPELLCAST_IGNORE_SEE | SPELLCAST_IGNORE_VALID_SPELL_TARGET | SPELLCAST_RANDOM)  // [WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_BLINDNESS, WIZARD_MORDENKAINENS_FORCE_MISSILES, WIZARD_LIGHTNING_BOLT, WIZARD_LIGHTNING_BOLT]
		Continue()
	RESPONSE #100
		MarkSpellAndObject("3242",[PC.0.0.0.0.0.0.0.0.CLASSMASK_GROUP_WARRIORS],SPELLCAST_RANDOM)  // [INNATE_FAERIE_FIRE]
		MarkSpellAndObject("21122112211221122222242223082308",LastMarkedObject,SPELLCAST_IGNORE_SEE | SPELLCAST_IGNORE_VALID_SPELL_TARGET | SPELLCAST_RANDOM)  // [WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_MAGIC_MISSILE, WIZARD_BLINDNESS, WIZARD_MORDENKAINENS_FORCE_MISSILES, WIZARD_LIGHTNING_BOLT, WIZARD_LIGHTNING_BOLT]
		MarkSpellAndObject("2224",[PC.0.0.0.0.0.0.0.0.238],SPELLCAST_RANDOM)  // [WIZARD_DEAFNESS]
		Continue()
END

IF
	!IsMarkedSpell(MARKED_SPELL)
THEN
	RESPONSE #100
		Spell(SpellTarget,MARKED_SPELL)
		WaitAnimation(Myself,WALK)
		WaitAnimation(Myself,CONJURE)
		WaitAnimation(Myself,CAST)
		ForceMarkedSpell(MARKED_SPELL)
END

IF
	See(NearestEnemyOf(Myself),0)
THEN
	RESPONSE #100
		EquipWeapon()
		AttackOneRound(LastMarkedObject)
END


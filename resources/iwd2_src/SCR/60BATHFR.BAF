IF
	!Global("Fire_Room_Armed","MYAREA",0)
	Or(2)
		CheckDoorFlags("AR6051_Lava_Art",DOOROPEN)
		CheckDoorFlags("AR6051_Lava_Switch",DOOROPEN)
THEN
	RESPONSE #100
		CloseDoor("AR6051_Lava_Art")
		CloseDoor("AR6051_Lava_Switch")
END


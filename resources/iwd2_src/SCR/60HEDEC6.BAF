IF
	Global("ar6051_Kill_HeartlessDead","GLOBAL",1)
THEN
	RESPONSE #100
		Kill(Myself)
END

IF
	Range("HC6",3,LESS_THAN)
THEN
	RESPONSE #100
		SetGlobal("DropInventory","LOCALS",1)
		TransferInventory("HC6",Myself)
		DestroyItem("60Heart6")  // Desiccated Heart
		Wait(4)
END

IF
	Global("DropInventory","LOCALS",1)
THEN
	RESPONSE #100
		DropInventory()
		Kill(Myself)
END

IF
	True()
THEN
	RESPONSE #100
		SetGlobal("Marked_Player","LOCALS",0)
		SetMyTarget(Nothing)
		Continue()
END

IF
	HasItem("60Heart6",Player1)  // Desiccated Heart
THEN
	RESPONSE #100
		SetGlobal("Marked_Player","LOCALS",1)
		SetMyTarget(Player1)
		Continue()
END


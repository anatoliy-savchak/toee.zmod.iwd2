IF
	!TimerActive(50)
	OpenState("AR6051_Blades3",TRUE)
THEN
	RESPONSE #100
		CloseDoor("AR6051_Blades3")
		StartTimer(50,3)
END

IF
	!TimerActive(50)
	Entered([PC])
THEN
	RESPONSE #100
		OpenDoor("AR6051_Blades3")
		ForceSpell(LastTrigger,TRAP_FLOOR_BLADES)  // SPIN249.SPL (Floor Blades)
		DisplayMessage(14381)  // Trap Sprung
		StartTimer(50,3)
END


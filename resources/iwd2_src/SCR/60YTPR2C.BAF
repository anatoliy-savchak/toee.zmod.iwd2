IF
	Global("ar6051_Kill_Archers","GLOBAL",1)
THEN
	RESPONSE #100
		Kill(Myself)
END

IF
	ForceMarkedSpell(MARKED_SPELL)
	SetSpellTarget(Nothing)
	HPPercentLT(Myself,25)
THEN
	RESPONSE #100
		MarkSpellAndObject("110312141401",Myself,SPELLCAST_IGNORE_SEE)  // [CLERIC_CURE_LIGHT_WOUNDS, CLERIC_CURE_MODERATE_WOUNDS, CLERIC_CURE_SERIOUS_WOUNDS]
		Continue()
END


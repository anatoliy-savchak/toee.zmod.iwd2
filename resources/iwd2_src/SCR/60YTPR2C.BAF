		MarkSpellAndObject("23062501132513101503",LastMarkedObject,SPELLCAST_IGNORE_SEE | SPELLCAST_IGNORE_VALID_SPELL_TARGET | SPELLCAST_RANDOM)  // [WIZARD_HOLD_PERSON, WIZARD_ANIMATE_DEAD, CLERIC_UNHOLY_BLIGHT, CLERIC_MISCAST_MAGIC, CLERIC_FLAME_STRIKE]

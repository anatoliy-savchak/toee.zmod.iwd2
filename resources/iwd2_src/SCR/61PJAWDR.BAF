IF
	Disarmed([PC])
THEN
	RESPONSE #100
		TriggerActivation(Myself,FALSE)
		ChangeCurrentScript("")
END

IF
	OpenState("AR6103_Spike1",TRUE)
	!TimerActive(100)
	Or(2)
		Entered([GOODCUTOFF])
		IsOverMe([GOODCUTOFF])
THEN
	RESPONSE #100
		ForceSpell(LastTrigger,CLERIC_CIRCLE_OF_BLADES)  // SPPR610.SPL (Circle of Blades)
		Continue()
END

IF
	OpenState("AR6103_Spike1",TRUE)
	!TimerActive(100)
THEN
	RESPONSE #100
		CloseDoor("AR6103_Spike1")
END

IF
	OpenState("AR6103_Spike1",FALSE)
THEN
	RESPONSE #100
		StartRandomTimer(100,0,3)
		OpenDoor("AR6103_Spike1")
END


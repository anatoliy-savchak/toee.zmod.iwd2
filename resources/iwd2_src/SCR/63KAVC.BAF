THEN
	RESPONSE #100
		MarkSpellAndObject("210223052408",Myself,SPELLCAST_IGNORE_SEE | SPELLCAST_IGNORE_VALID_SPELL_TARGET)  // [WIZARD_ARMOR, WIZARD_HASTE, WIZARD_STONESKIN]

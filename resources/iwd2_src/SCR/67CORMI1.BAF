IF
	True()
THEN
	RESPONSE #100
		CutSceneId("OrmisDohor")
		FadeToColor([0.0],0)
		Wait(1)
		HideCreature(Myself,TRUE)
		ActionOverride("CrystallineMonk",DestroySelf())
		ActionOverride("SandMonk",DestroySelf())
		ActionOverride("ShadowMonk",DestroySelf())
		Wait(1)
		FadeFromColor([0.0],0)
		Wait(1)
		EndCutSceneMode()
		DestroySelf()
END


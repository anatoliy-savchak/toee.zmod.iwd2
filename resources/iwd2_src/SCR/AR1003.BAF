	Global("AR1003_BAR_CLEANUP","GLOBAL",0)
	GlobalGT("Palisade_Iron_Collar_Quest","GLOBAL",1)
	!AnyPCOnMap()
THEN
	RESPONSE #100
		SetGlobal("AR1003_BAR_CLEANUP","GLOBAL",1)
		Continue()
END

